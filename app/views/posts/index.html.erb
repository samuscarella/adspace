      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">New Post</h4>
          </div>
          <div class="modal-body">
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-12">

                  <%= form_for Post.new, :html => {role: 'form'} do |f| %>

                      <div class="form-group">
                        <%= f.label :title %>:
                        <%= image_tag('title.svg', :alt => 'title', :id => 'title-icon-post') %>
                        <%= f.text_field(:title, class: 'form-control form-input', placeholder: 'Title', value: '') %>
                      </div>
                      <div class="form-group">
                        <%= f.label :url %>:
                        <%= image_tag('link.svg', :alt => 'link', :id => 'url-icon-post') %>
