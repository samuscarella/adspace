                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <%= f.label :category %>:
                        <%= f.collection_select(:category_id, Category.all, :id, :name, {:prompt => true}, {:class => 'form-control form-input'}) %>
                      </div>
                      <div class="form-group">
                        <div class="row">
                          <div class="col-sm-6 col-sm-offset-3">
                            <%= image_tag('create.svg', :alt => 'create', :id => 'submit-icon-post') %>
                            <%= submit_tag('Create Post', class: 'form-control btn btn-danger', value: 'Create Post') %>
                          </div>
                        </div>
                      </div>

                  <% end %>

